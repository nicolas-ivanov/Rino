#!/bin/bash #for highlighting purpose only
########################################################################

a_call	давай позвоним			# кому нужно позвонить?
a_call	васе

########################################################################

a_sms	напиши смс				# кому нужно написать?
a_sms	васе

a_email	напиши письмо			# кому нужно написать?
a_email	васе

########################################################################

a_sms	напиши смс				# что нужно написать?
a_sms	_привет _как _дела		# кому отправить?
a_sms	отправь васе

a_email	напиши письмо			# что нужно написать?
a_email	_привет _как _дела		# кому отправить?
a_email	отправь васе

########################################################################

a_sms	напиши смс				# кому нужно написать?
a_sms	васе					# что написать?
a_sms	_привет _как _дела

a_email	напиши письмо			# кому нужно написать?
a_email	васе					# что написать?
a_email	_привет _как _дела

########################################################################

a_call	набери мне номер			# кому позвонить?
a_call	нет давай лучше позвоним васе

a_sms	напиши смс васе				# что написать?
a_call	нет давай лучше позвоним васе

a_email	напиши письмо васе			# что написать?
a_call	нет давай лучше позвоним васе
